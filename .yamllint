---
# https://yamllint.readthedocs.io/en/stable/rules.html
extends: default

rules:
  braces:
    max-spaces-inside: 1
    level: error
  brackets:
    max-spaces-inside: 1
    level: error
  indentation:
    indent-sequences: consistent
    spaces: 2
    level: error
  line-length:
    max: 120
    level: warning
  key-duplicates: enable
  new-line-at-end-of-file: enable
  new-lines:
    type: unix
  trailing-spaces: enable
  truthy:
    allowed-values: ['true', 'false']
    check-keys: false
...
